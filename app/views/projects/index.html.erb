<div class="card">
  <div class="card-body pt-5">
    <h2 class='card-title d-flex justify-content-between mb-4'>
      <span> Projects </span>
      <%= link_to "New project", new_project_path, class: 'btn btn-primary' %>
    </h2>

    <%@projects.each do |project|%>
      <%= link_to project, class: 'text-decoration-none' do %>
        <div class='card project-card mb-3'>     
          <div class='card-body'>
            <div class='mb-3'>
              <span class="badge text-bg-<%= project.badge_color %>"><%= project.status %></span>              
              <span class="text-secondary">
                <small><%= project.percent_complete %>% complete</small>
                <small>(<%= project.total_complete %>/<%= project.total_tasks %>)</small>
              </span>        
                          
            </div>
            <h3 class='card-title text-dark'><b> <%= project.name %> </b> </h3>
            <p class='text-secondary'><%= project.description %></p>
            
          </div>
        </div>
      <% end %>   
    <%end%>
  
  </div>
</div>

